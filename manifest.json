{
    "name": "BelpostTracking",
    "version": "1.1",
    "description": "Makes it easier to track your parsels via belpost.by.",
    "manifest_version": 2,
    "icons": {
        "128": "./icons/icon128.png",
        "48": "./icons/icon48.png",
        "16": "./icons/icon16.png"
    },

    "browser_action": {
        "default_icon": "./icons/icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "page": "./background.html",
        "persistent": false
    },

    "permissions": [
        "contextMenus"
    ]
}